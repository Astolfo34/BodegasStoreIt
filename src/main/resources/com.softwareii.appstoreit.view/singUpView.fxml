<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.softwareii.appstoreit.controller.SignUpController">
    <!-- Centrar el contenido -->
    <center>
        <VBox alignment="CENTER" spacing="20.0" BorderPane.alignment="CENTER">
            <Label style="-fx-font-size: 24px; -fx-text-fill: #2a9d8f;" text="Registro de Usuario" />
            <VBox spacing="10.0">
                <Label text="Nombre:" />
                <TextField fx:id="txtNombre" promptText="Ingresa tu nombre" />
            </VBox>
            <VBox spacing="10.0">
                <Label text="ID:" />
                <TextField fx:id="txtID" promptText="Ingresa tu ID" />
            </VBox>
            <VBox spacing="10.0">
                <Label text="Usuario:" />
                <TextField fx:id="txtUsuario" promptText="Ingresa tu usuario" />
            </VBox>
            <VBox spacing="10.0">
                <Label text="Contraseña:" />
                <PasswordField fx:id="txtContraseña" promptText="Crea una contraseña" />
            </VBox>
            <Button fx:id="btnRegistrar" onAction="#RegistrarUsuario" style="-fx-background-color: #264653; -fx-text-fill: white;" text="Registrar" />
            <Hyperlink fx:id="linkLogin" style="-fx-text-fill: #e76f51;" text="¿Ya tienes una cuenta? Ingresa aquí" />
        </VBox>
    </center>
    <!-- Márgenes para el panel -->
    <padding>
        <Insets bottom="50" left="50" right="50" top="50" />
    </padding>
</BorderPane>
